<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradien
                android:startColor="#D4EDDA"
                android:endColor="#C3E6CB"
                android:angle="0" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#A8D5B3" />
            <alpha android:alpha="0.7" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#9AE8F5E8"
                android:endColor="#9AD4EDDA"
                android:angle="0" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#9AC3E6CB" />
            <alpha android:alpha="0.6" />
        </shape>
    </item>
    
</selector> 